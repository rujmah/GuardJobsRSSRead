.select_feed
  %form#select_feed_form(action = '/select' method = 'post')
    Select Category:
    %select(name='feed')
      %option(value='MentalHealth') Mental Health
      %option(value='Nursing') Nursing
      %option(value='SexualHealth') Sexual Health
    %input(type='submit' value='Go')

.show_feed
  %h1
    =@feed.channel.title
    %a(href="#{@feed.channel.link}") [Feed]
  .description=@feed.channel.description
  .generator
    generated by
    =@feed.channel.generator

  .jobs(style='border:solid')
    - @feed.items.each_with_index do |item,i|
      .job
        %a#title(href = "#{item.link}")
          =item.title
          
        .description=item.description
    
